/* Estilo general */
QWidget {
    background-color: #f4f4f4;
    font-family: 'Segoe UI', sans-serif;
    font-size: 14px;
}

/* Botones principales */
QPushButton {
    background-color: #dbdbdb;
    color: #333;
    border-radius: 8px;
    padding: 8px 12px;
    margin: 4px;
    font-size: 16px;
}

QPushButton:hover {
    background-color: #474747;
    color: white;
}

#Sidebar QPushButton#BotonSalir {
    background-color: #dc3545;
    color: white;
    border-radius: 8px;
    padding: 12px;
    margin-top: 120px;
}
#Sidebar QPushButton#BotonSalir:hover {
    background-color: #a71d2a;
}


/* Barra lateral */
#Sidebar {
    background-color: #474747;
}

#Sidebar QPushButton {
    background-color: transparent;
    color: white;
    text-align: left;
    padding: 12px;
    border: none;
}

#Sidebar QPushButton:hover {
    background-color: #17191c;
}

