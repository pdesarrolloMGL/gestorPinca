}
QHeaderView::section {
    background-color: #dbdbdb;
    color: black;
    font-weight: bold;
}

/* Buscador QLineEdit */
QLineEdit#BuscadorInventario {
    min-width: 220px;
    max-width: 320px;
    padding: 7px 12px;
    border: 1px solid #ced4da;
    border-radius: 8px;
    background: #fff;
    font-size: 15px;
    color: #999;
}

/* Botón de buscar */
QPushButton#BtnBuscarInventario {
    background-color: #dbdbdb;
    color: #333;
    border-radius: 8px;
    padding: 7px 18px;
    margin-left: 8px;
    font-size: 15px;
    max-width: 120px;
    min-width: 80px;  
    border: 1px solid #b4b4b4;
}
QPushButton#BtnBuscarInventario:hover {
    background-color: #474747;
    color: white;
}

/* Select de productos */
QComboBox {
    min-width: 220px;
    max-width: 350px;
    padding: 7px 12px;
    border: 1px solid #ced4da;
    border-radius: 8px;
    background: #fff;
    color: #999;
    font-size: 15px;
}
QComboBox:focus {
    border: 1.5px solid #dbdbdb;
    background: #fff;
}
QComboBox QAbstractItemView {
    border: 1px solid #ced4da;
    selection-background-color: #474747;
    font-size: 15px;
}

/* Suma total */
QLabel#SumaTotalLabel {
    color: #007b55;
    font-weight: bold;
    font-size: 18px;
    padding: 8px 0 0 0;
    margin-right: 10px;
}

/* Estilo de las tablas y select */

QPushButton#btnInventario.active-inventario {
    background-color: #474747;
    color: white;
}

QComboBox QAbstractItemView QScrollBar:vertical {
    background: #f4f4f4;
    width: 12px;
    margin: 0px;
    border-radius: 6px;
}
QComboBox QAbstractItemView QScrollBar::handle:vertical {
    background: #474747;
    min-height: 20px;
    border-radius: 6px;
}
QComboBox QAbstractItemView QScrollBar::add-line:vertical,
QComboBox QAbstractItemView QScrollBar::sub-line:vertical {
    height: 0px;
}

QComboBox QAbstractItemView {
    background: #fff;
    color: #333;
    selection-background-color: #474747;
    selection-color: white;
    font-size: 15px;
    border: 1px solid #ced4da;
}

QComboBox::drop-down {
    subcontrol-origin: padding;
    subcontrol-position: top right;
    width: 32px; /* ancho del botón */
    border-left: 1px solid #ced4da;
    background: #dbdbdb;
}

QComboBox::down-arrow {
    image: url(assets/down.png); /* Cambia por la ruta de tu icono */
    width: 18px;
    height: 18px;
}

QComboBox::down-arrow:on { /* Cuando está presionado */
    top: 2px;
    left: 2px;
}

#Sidebar QPushButton[active="true"] {
    background-color: #17191c;
    color: #fff;
}

